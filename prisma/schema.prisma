// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model tb_mhs {
    nim         String     @id @unique
    nama        String
    statusAktif StatusMhs
    alamat      String?
    email       String?
    kodeKab     String?
    kodeProv    String?
    jalurMasuk  JalurMasuk
    angkatan    Int
    noHP        String?
    kodeWali    String
    foto        String?

    // FK_THIS
    fk_kodeKab  tb_kabupaten? @relation(fields: [kodeKab], references: [kodeKab])
    fk_kodeProv tb_provinsi?  @relation(fields: [kodeProv], references: [kodeProv])
    fk_kodeWali tb_dosen      @relation(fields: [kodeWali], references: [nip])

    // FK_OTHER
    fk_nim_irs          tb_irs[]
    fk_nim_khs          tb_khs[]
    fk_nim_pkl          tb_pkl[]
    fk_nim_skripsi      tb_skripsi[]
    fk_pemilik_akun_mhs tb_akun_mhs?
}

enum JalurMasuk {
    SBMPTN
    SNMPTN
    Mandiri
    Lainnya
}

enum StatusMhs {
    Aktif
    Cuti
    Lulus

    Mangkir
    DO
    UndurDiri
    MeninggalDunia
}

// ================================================================================
model tb_dosen {
    nip      String  @id @unique
    nama     String
    alamat   String?
    email    String?
    kodeKab  String?
    kodeProv String?
    noHP     String?
    foto     String?

    // FK_THIS
    fk_kodeKab  tb_kabupaten? @relation(fields: [kodeKab], references: [kodeKab])
    fk_kodeProv tb_provinsi?  @relation(fields: [kodeProv], references: [kodeProv])

    // FK_OTHER
    fk_kodeWali_mhs       tb_mhs[]
    fk_pemilik_akun_dosen tb_akun_dosen?
}

// ================================================================================
model tb_irs {
    nim            String
    semester       String
    status         StatusAktif // TODO: ubah jadi enum
    jumlahSks      String?
    fileIrs        String?
    statusValidasi Boolean     @default(false)

    // FK_THIS
    fk_nim tb_mhs @relation(fields: [nim], references: [nim])

    @@id([nim, semester])
}

model tb_khs {
    nim                String
    semester           String
    status             StatusAktif
    jumlahSksSemester  String?
    ips                String?
    jumlahSksKumulatif String?
    ipk                String?
    fileKhs            String?
    statusValidasi     Boolean     @default(false)

    // FK_THIS
    fk_nim tb_mhs @relation(fields: [nim], references: [nim])

    @@id([nim, semester])
}

enum StatusAktif {
    Aktif
    Cuti
}

// ============================================================================

model tb_pkl {
    nim            String
    semester       String
    nilai          String
    filePkl        String
    statusValidasi Boolean @default(false)

    // FK_THIS
    fk_nim tb_mhs @relation(fields: [nim], references: [nim])

    @@id([nim, semester])
}

model tb_skripsi {
    nim                String
    semester           String
    nilai              String
    tanggalLulusSidang DateTime @db.Date
    lamaStudi          Int
    fileSkripsi        String
    statusValidasi     Boolean  @default(false)

    // FK_THIS
    fk_nim tb_mhs @relation(fields: [nim], references: [nim])

    @@id([nim, semester])
}

// ============================================================================

model tb_provinsi {
    kodeProv String @id @unique
    namaProv String

    // FK_OTHER
    fk_kodeProv_mhs       tb_mhs[]
    fk_kodeProv_dosen     tb_dosen[]
    fk_kodeProv_kabupaten tb_kabupaten[]
}

model tb_kabupaten {
    kodeKab  String @id @unique
    namaKab  String
    kodeProv String

    // FK_THIS
    fk_kodeProv tb_provinsi @relation(fields: [kodeProv], references: [kodeProv])

    // FK_OTHER
    fk_kodeKab_mhs   tb_mhs[]
    fk_kodeKab_dosen tb_dosen[]
}

// ============================================================================

model tb_akun_mhs {
    username String     @id @unique
    password String
    status   StatusAkun
    pemilik  String     @unique

    // FK_THIS
    fk_pemilik tb_mhs @relation(fields: [pemilik], references: [nim])
}

model tb_akun_dosen {
    username String     @id @unique
    password String
    status   StatusAkun
    pemilik  String     @unique

    // FK_THIS
    fk_pemilik tb_dosen @relation(fields: [pemilik], references: [nip])

    // FK_OTHER
    fk_username_role tb_role_akun_dosen[]
}

model tb_role_akun_dosen {
    username String
    role     Role

    // FK_THIS
    fk_username tb_akun_dosen @relation(fields: [username], references: [username])

    @@id([username, role])
}

enum Role {
    Operator
    Departemen
    Dosen
}

enum StatusAkun {
    Aktif
    NonAktif
}
